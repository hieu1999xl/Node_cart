<div class="row">
    <div class="col-lg-6">
        <div class="checkout__input">
            <p>{{ @root.__ "Fist Name" }}<span>*</span></p>
            <input type="text" id="shipFirstname" name="shipFirstname" placeholder="{{ @root.__ "Fist Name" }}"
                value="{{@root.session.customerFirstname}}" required>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="checkout__input">
            <p>{{ @root.__ "Last Name" }}<span>*</span></p>
            <input type="text" id="shipLastname" name="shipLastname" placeholder="{{ @root.__ "Last Name" }}"
                value="{{@root.session.customerLastname}}" required>
        </div>
    </div>
</div>
<div class="checkout__input">
    <p>{{ @root.__ "Country" }}<span>*</span></p>
    <select id="shipCountry" name="shipCountry" required>
        <option value="" disabled selected>Select Country</option>
        {{#each countryList}}
        <option {{selectState this @root.session.customerCountry}} value="{{this}}">{{this}}</option>
        {{/each}}
    </select>
</div>
<div class="checkout__input">
    <p>{{ @root.__ "Address" }}<span>*</span></p>
    <input type="text" placeholder="Street Address" class="checkout__input__add" id="shipAddr1" name="shipAddr1"
        value="{{@root.session.customerAddress1}}" required>
    <input type="text" placeholder="Apartment, suite, unite ect (optinal)" id="shipAddr2" name="shipAddr2"
        value="{{@root.session.customerAddress2}}">
</div>
<div class="checkout__input">
    <p>{{ @root.__ "Country/State" }}<span>*</span></p>
    <input type="text" id="shipState" name="shipState" placeholder="{{ @root.__ "Country/State" }}"
        value="{{@root.session.customerState}}" required>
</div>
<div class="checkout__input">
    <p>{{ @root.__ "Company" }}<span>*</span></p>
    <input type="text" id="shipCompany" name="shipCompany" placeholder="{{ @root.__ "Company" }}"
        value="{{@root.session.customerCompany}}" required>
</div>
<div class="checkout__input">
    <p>{{ @root.__ "Postcode / ZIP" }}<span>*</span></p>
    <input type="text" id="shipPostcode" name="shipPostcode" placeholder="{{ @root.__ "Postcode" }}"
        value="{{@root.session.customerPostcode}}" required>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="checkout__input">
            <p>{{ @root.__ "Phone" }}<span>*</span></p>
            <input type="text" id="shipPhoneNumber" name="shipPhoneNumber" placeholder="{{ @root.__ "Phone number" }}"
                value="{{@root.session.customerPhone}}" required>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="checkout__input">
            <p>{{ @root.__ "Email" }}<span>*</span></p>
            <input type="email" id="shipEmail" name="shipEmail" minlength="5" placeholder="{{ @root.__ " Email address"
                }}" value="{{@root.session.customerEmail}}" required>
        </div>
    </div>
</div>
{{#unless @root.session.customerPresent}}
<div class="checkout__input__checkbox">
    {{!-- <div class="checkout__input">
        <p>Account Password<span>*</span></p>
        <input type="password" id="newCustomerPassword" name="newCustomerPassword" placeholder="Password">
    </div> --}}
</div>


{{/unless}}
<div class="checkout__input">
    <p>{{ @root.__ "Order notes" }}<span>*</span></p>
    <input type="text" placeholder="{{ @root.__ " Order notes" }}" id="orderComment" name="orderComment">
</div>